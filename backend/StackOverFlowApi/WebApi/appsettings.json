{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "Logs/log.txt" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "WebApi"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Data Source=host.docker.internal,1433;Initial Catalog=StackOverFlow;User ID=sa;Password=Your_password123;Trust Server Certificate=True"
    //"Default": "Server=tcp:my-sql-server1752.database.windows.net,1433;Initial Catalog=SOF;Persist Security Info=False;User ID=sqladmin;Password=YourStrong!Passw0rd;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },
  "ExternalApies": {
    "StackOverFlow": {
      "BaseUrl": "https://api.stackexchange.com/2.3",
      "Data": {
        "TagsCount": 1000
      }
    }
  },
  "OTEL": {
    "Endpoint": "http://otel-collector:4317"
  },
  "Jwt": {
    "Key": "bf5c59890d3497a5afcf048f3b3467e3",
    "Issuer": "WebApi",
    "Audience": "WebApiUsers",
    "ExpiryInHours": 1,
    "RefreshTokenExpiryInDays": 1
  },
  "AuthorizationPolicies": [
    {
      "Name": "IsUser",
      "RequiredRoles": [
        "User"
      ]
    }
  ]
}
